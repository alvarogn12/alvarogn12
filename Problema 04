programa {
  funcao inicio() {
  //declaração de variaveis
  real n1,n2,n3,n4,mediaaritmedia
  //entrada de dados
  escreva("informe a 1 nota")
  leia(n1)
  escreva("informe a 2 nota")
  leia(n2)
  escreva("informe a 3 nota")
  leia(n3)
  escreva("informe a 4 nota")
  leia(n4)
  //processamento
  mediaaritmedia=(n1+n2+n3+n4)/4
  //saida de dados
  escreva("a media aritmetica e",mediaaritmedia)
  }
}

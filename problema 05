programa {
  funcao inicio() {
    //declaração de variaveis
    real altura,pesoideal
    //declaração de constante
    const real k = 72.7
    const inteiro b = 58
    //entrada de dados
    escreva("informe a altura") 
    leia(altura)
    //processamento
    pesoideal=k*altura-b
    //saida de dados
    escreva("o peso ideal e",pesoideal)
  }
}
